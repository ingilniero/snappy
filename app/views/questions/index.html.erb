<%= provide(:title, 'Snappy - Q&A') %>
<div id="ask">
  <h1>Ask a Question</h1>

  <% if logged_in?  %>
    <%= render 'question_form' %>
  <% else  %>
    <p>Please login to ask or answer questions.</p>
  <% end  %>
</div>
<!-- end ask -->
<div id="questions">
  <h2>Unsolved Questions</h2>
  <% if @questions.any? %>
    <ul>
      <%= render @questions %>
    </ul>
    <%= paginate @questions %>
  <% else %>
    <p>No questions have benn asked.</p>
  <% end %>
</div>
<!-- end questions -->